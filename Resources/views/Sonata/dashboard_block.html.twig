{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
<table class="table table-bordered table-striped sonata-ba-list">
    <thead>
        <tr>
            <th colspan="3">{{ 'sensi.yamlgui.title.list'|trans([], 'sensi_yaml_gui') }}</th>
        </tr>
    </thead>

    <tbody>
    	{% for key, item in settings.managed_files %}
    		<tr>
    			<td class="sonata-ba-list-label">{{ item.title }}</td>
    			<td>
    				<a href="{{ path('sensi_yaml_gui_edit', {'config_file': key }) }}">
    				{{ 'sensi.yamlgui.action.edit'|trans([], 'sensi_yaml_gui') }}
    				</a>
    			</td>
    		</tr>
    	{% endfor %}
    </tbody>
</table>
{% endblock %}